<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Faculty Actions</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <!-- Custom styles -->
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }
        .header {
            background-color: #333;
            color: #fff;
            padding: 20px;
            text-align: center;
        }
        .container {
            padding: 20px;
        }
        .button-container {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }
        .form-container {
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            display: none;
            margin-top: 20px;
        }

        .back-button {
            position: absolute;
            top: 10px;
            right: 10px;
        }
    </style>
</head>
<body>
    
    <div class="header">
        <h1>Faculty Actions</h1>
    </div>
    <div class="container">
        <button onclick="window.location.href='/admin_dashboard'" class="btn btn-secondary back-button">Back</button>
        <div class="button-container">
            <button class="btn btn-primary mr-3" id="addFacultyBtn">Add Faculty</button>
            <button class="btn btn-success mr-3" id="editFacultyBtn">Edit Faculty</button>
            <button class="btn btn-danger" id="deleteFacultyBtn">Delete Faculty</button>
        </div>

        <!-- Add Faculty Form -->
        <div class="form-container" id="addFacultyForm">
            <h2 class="mb-4">Add Faculty</h2>
            <form action="/add_faculty" method="POST">
                <div class="form-group">
                    <label for="facultyId">Faculty ID:</label>
                    <input type="text" class="form-control" id="facultyId" name="facultyId" required>
                </div>
                
                <div class="form-group">
                    <label for="facultyName">Faculty Name:</label>
                    <input type="text" class="form-control" id="facultyName" name="facultyName" required>
                </div>
        
                <div class="form-group">
                    <label for="year">Year:</label>
                    <select id="year" name="year" class="form-control" required>
                        <option value="1">1st Year</option>
                        <option value="2">2nd Year</option>
                        <option value="3">3rd Year</option>
                        <option value="4">4th Year</option>
                    </select>
                </div>
        
                <div class="form-group">
                    <label for="semester">Semester:</label>
                    <select id="semester" name="semester" class="form-control" required>
                        <option value="1">1st Semester</option>
                        <option value="2">2nd Semester</option>
                    </select>
                </div>


                <div class="form-group">
                    <label for="subject">Subject:</label>
                    <select class="form-control" id="subject" name="subject" required>
                        <option value="">Select Subject</option>
                    </select>
                </div>

                
                <div class="form-group">
                    <label for="section">Section:</label>
                    <select id="section" name="section" class="form-control" required>
                        <option value="A">A</option>
                        <option value="B">B</option>
                        <option value="C">C</option>
                        <option value="D">D</option>
                    </select>
                </div>
        
                <button type="submit" class="btn btn-primary">Add Faculty</button>
            </form>
        </div>

        <!-- Edit Faculty Form -->
        <div class="form-container" id="editFacultyForm">
            <h2 class="mb-4">Edit Faculty</h2>
            <form action="/edit_faculty" method="POST">

                
                <div class="form-group">
                    <label for="facultyId">Faculty ID:</label>
                    <input type="text" class="form-control" id="facultyId" name="facultyId" required>
                </div>
                
                <div class="form-group">
                    <label for="facultyName">Faculty Name:</label>
                    <input type="text" class="form-control" id="facultyName" name="facultyName" required>
                </div>
        
                <div class="form-group">
                    <label for="year">Year:</label>
                    <select id="year" name="year" class="form-control" required>
                        <option value="1">1st Year</option>
                        <option value="2">2nd Year</option>
                        <option value="3">3rd Year</option>
                        <option value="4">4th Year</option>
                    </select>
                </div>
        
                <div class="form-group">
                    <label for="semester">Semester:</label>
                    <select id="semester" name="semester" class="form-control" required>
                        <option value="1">1st Semester</option>
                        <option value="2">2nd Semester</option>
                    </select>
                </div>
        
                <div class="form-group">
                    <label for="subject">Subject:</label>
                    <input type="text" class="form-control" id="subject" name="subject" required>
                </div>
        
                <button type="submit" class="btn btn-success">Update Faculty</button>
            </form>
        </div>

        <!-- Delete Faculty Form -->
        <div class="form-container" id="deleteFacultyForm">
            <h2 class="mb-4">Delete Faculty</h2>
            <form action="/delete_faculty" method="POST">
                <div class="form-group">
                    <label for="facultyId">Faculty ID:</label>
                    <input type="text" class="form-control" id="facultyId" name="facultyId" required>
                </div>
                <button type="submit" class="btn btn-danger">Delete Faculty</button>
            </form>
        </div>
    </div>
    <!-- Bootstrap JS (optional) -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        // Function to toggle form visibility
        function toggleForm(formId) {
            var forms = document.querySelectorAll('.form-container');
            forms.forEach(function(form) {
                if (form.id === formId) {
                    form.style.display = 'block';
                } else {
                    form.style.display = 'none';
                }
            });
        }

        // Event listeners for button clicks
        document.getElementById('addFacultyBtn').addEventListener('click', function() {
            toggleForm('addFacultyForm');
        });

        document.getElementById('editFacultyBtn').addEventListener('click', function() {
            toggleForm('editFacultyForm');
        });

        document.getElementById('deleteFacultyBtn').addEventListener('click', function() {
            toggleForm('deleteFacultyForm');
        });
    </script>
        <script>
            $(document).ready(function() {
                $('#year, #semester').change(function() {
                    var year = $('#year').val();
                    var semester = $('#semester').val();
                    $.ajax({
                        type: 'GET',
                        url: '/get_subjects',
                        data: {
                            year: year,
                            semester: semester
                        },
                        success: function(data) {
                            var subjectsDropdown = $('#subject');
                            subjectsDropdown.empty();
                            subjectsDropdown.append('<option value="">Select Subject</option>');
                            data.forEach(function(subject) {
                                subjectsDropdown.append('<option value="' + subject + '">' + subject + '</option>');
                            });
                        },
                        error: function(xhr, status, error) {
                            console.error(xhr.responseText);
                        }
                    });
                });
            });
        </script>
</body>
</html>
