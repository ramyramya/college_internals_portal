<!-- views/delete_faculty.html -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Faculty</title>
</head>
<body>
    <h1>Delete Faculty</h1>
    <% if (message && message.length > 0) { %>
        <% message.forEach(msg => { %>
            <div class="alert alert-<%= msg.type === 'error' ? 'danger' : 'success' %>" role="alert">
                <%= msg.text %>
            </div>
        <% }); %>
    <% } %>
    <form action="/delete_faculty" method="POST">
        <label for="facultyId">Faculty ID:</label>
        <input type="text" id="facultyId" name="facultyId" required><br><br>
        <button type="submit">Delete Faculty</button>
    </form>
</body>
</html>
