<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Faculty Dashboard</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <style>
        body{
            background-image: url('/images/background.jpg');
            color:white;
        }
        .button-block {
            height: 150px;
            margin-bottom: 20px;
            border-radius: 10px;
            overflow: hidden;
        }
        .button-block .btn {
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            transition: transform 0.2s ease-in-out;
        }
        .button-block:hover .btn {
            transform: scale(1.05);
        }

        .home-button {
            position: absolute;
            top: 20px;
            right: 20px;
        }

        /* Custom style for form labels */
        label {
            color: black; /* Set label color to black */
        }
    </style>
</head>
<body>
    <% if (flash.error) { %>
        <div class="alert alert-danger" role="alert">
            <%= flash.error %>
        </div>
    <% } %>
    
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-12 mb-4">
                <!-- Welcome message with faculty name -->
                <h3>Welcome, <%= facultyName %></h3>
            </div>
            <a href="/" class="btn btn-outline-primary home-button">&larr; HOME</a>
            <div class="col-md-6">
                <div class="button-block bg-primary">
                    <a href="#" class="btn btn-block btn-lg text-white" data-toggle="modal" data-target="#PostMarksModal">Post Marks</a>
                </div>
            </div>
            <div class="col-md-6">
                <div class="button-block bg-secondary">
                    <button class="btn btn-block btn-lg text-white" data-toggle="modal" data-target="#uploadQuestionPapersModal">Upload Question Papers</button>
                </div>
            </div>
            <div class="col-md-6">
                <div class="button-block bg-danger">
                    <a href="#" class="btn btn-block btn-lg text-white" data-toggle="modal" data-target="#ViewMarksModal">View Marks</a>
                </div>
            </div>
            <div class="col-md-6">
                <div class="button-block bg-info">
                    <button class="btn btn-block btn-lg text-white" data-toggle="modal" data-target="#changePasswordModal">Change Password</button>
                </div>
            </div>
            <div class="col-md-12">
                <!-- Logout button -->
                <a href="/faculty/logout" class="btn btn-outline-danger float-right">Logout</a>
            </div>
        </div>
    </div>

    <!-- Upload Question Papers Modal -->
    <div class="modal fade" id="uploadQuestionPapersModal" tabindex="-1" role="dialog" aria-labelledby="uploadQuestionPapersModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="uploadQuestionPapersModalLabel">Upload Question Papers</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- Question Papers Upload Form -->
                    <form id="uploadQuestionPapersForm" action="/upload_question_papers" method="POST" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="year">Year:</label>
                            <select class="form-control" id="year" name="year" required>
                                <option value="">Select Year</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="semester">Semester:</label>
                            <select class="form-control" id="semester" name="semester" required>
                                <option value="">Select Semester</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="subject">Subject:</label>
                            <select class="form-control" id="subject" name="subject" required>
                                <option value="">Select Subject</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="mid">Mid:</label>
                            <select class="form-control" id="mid" name="mid" required>
                                <option value="">Select Mid</option>
                                <option value="mid1">Mid 1</option>
                                <option value="mid2">Mid 2</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="questionPapers">Upload Question Paper:</label>
                            <input type="file" class="form-control-file" id="questionPapers" name="questionPapers" required>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Upload</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Post Marks Modal -->
    <div class="modal fade" id="PostMarksModal" tabindex="-1" role="dialog" aria-labelledby="PostmarksModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="PostMarksModalLabel">Post Marks</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- Post Marks Form -->
                    <form id="postMarksForm" action="/post_marks" method="POST">
                        <div class="form-group">
                            <label for="yearp">Year:</label>
                            <select class="form-control" id="yearp" name="yearp" required>
                                <option value="">Select Year</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="semesterp">Semester:</label>
                            <select class="form-control" id="semesterp" name="semesterp" required>
                                <option value="">Select Semester</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="subjectp">Subject:</label>
                            <select class="form-control" id="subjectp" name="subjectp" required>
                                <option value="">Select Subject</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="midp">Mid:</label>
                            <select class="form-control" id="midp" name="midp" required>
                                <option value="">Select Mid</option>
                                <option value="1">Mid 1</option>
                                <option value="2">Mid 2</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="sectionp">Section:</label>
                            <select class="form-control" id="sectionp" name="sectionp" required>
                                <option value="">Select Section</option>
                                <option value="A">A</option>
                                <option value="B">B</option>
                                <option value="C">C</option>
                                <option value="D">D</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- View Marks Modal -->
    <div class="modal fade" id="ViewMarksModal" tabindex="-1" role="dialog" aria-labelledby="ViewmarksModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="ViewMarksModalLabel">View Marks</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- View Marks Form -->
                    <form id="viewMarksForm" action="/view_marks" method="POST">
                        <div class="form-group">
                            <label for="yearv">Year:</label>
                            <select class="form-control" id="yearv" name="yearv" required>
                                <option value="">Select Year</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="semesterv">Semester:</label>
                            <select class="form-control" id="semesterv" name="semesterv" required>
                                <option value="">Select Semester</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="subjectv">Subject:</label>
                            <select class="form-control" id="subjectv" name="subjectv" required>
                                <option value="">Select Subject</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="midv">Mid:</label>
                            <select class="form-control" id="midv" name="midv" required>
                                <option value="">Select Mid</option>
                                <option value="1">Mid 1</option>
                                <option value="2">Mid 2</option>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-primary btn-block">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
<!-- Change Password Modal -->

<div class="modal fade" id="changePasswordModal" tabindex="-1" role="dialog" aria-labelledby="changePasswordModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="changePasswordModalLabel">Change Password</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Change Password Form -->
                <form id="changePasswordForm" action="/change_password" method="POST">
                    <div class="form-group">
                        <label for="facultyID">Faculty ID:</label>
                        <input type="text" class="form-control" id="facultyID" name="facultyID" required>
                    </div>
                    <div class="form-group">
                        <label for="newPassword">New Password:</label>
                        <input type="password" class="form-control" id="newPassword" name="newPassword" required>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Change Password</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function() {
        $('#changePasswordForm').submit(function(event) {
            event.preventDefault(); // Prevent default form submission
    
            // Serialize form data
            var formData = $(this).serialize();
    
            // AJAX call to submit form data
            $.ajax({
                type: 'POST',
                url: '/change_password',
                data: formData,
                dataType: 'json', // Expect JSON response from the server
                success: function(response) {
                    if (response.success) {
                        // Display success message on the modal
                        $('#changePasswordForm').hide(); // Hide the form
                        $('.modal-body').append('<div class="alert alert-success mt-3">' + response.message + '</div>');
                    } else {
                        // Display error message if the password change was not successful
                        $('.modal-body').append('<div class="alert alert-danger mt-3">' + response.message + '</div>');
                    }
                },
                error: function(xhr, status, error) {
                    // Display error message if there was an error in the AJAX request
                    console.error(xhr.responseText);
                }
            });
        });
    });
    </script>
    

    <!-- Bootstrap JS (optional) -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- JavaScript for dynamic subject dropdown -->
    <script>
        $(document).ready(function() {
            $('#year, #semester').change(function() {
                var year = $('#year').val();
                var semester = $('#semester').val();
                console.log(year);
                console.log(semester);
                $.ajax({
                    type: 'GET',
                    url: '/get_subjects',
                    data: {
                        year: year,
                        semester: semester
                    },
                    success: function(data) {
                        var subjectsDropdown = $('#subject');
                        subjectsDropdown.empty();
                        subjectsDropdown.append('<option value="">Select Subject</option>');
                        data.forEach(function(subject) {
                            subjectsDropdown.append('<option value="' + subject + '">' + subject + '</option>');
                        });
                    },
                    error: function(xhr, status, error) {
                        console.error(xhr.responseText);
                    }
                });
            });
        });
    </script>
